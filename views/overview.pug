extends base

block content 
  main.main 
    .card-container
      each movie in movies
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/movies/${movie.coverImage}`, alt=`${movie.name}`)
            h3.heading-tertirary
              span= movie.name

          .card__details
            h4.card__sub-heading= `${movie.actors.join(', ')}`
            h4.card__sub-heading= `${movie.genres.join(', ')}`

            p.card__text= `${movie.description}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= `${movie.directors.join(', ')}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-star')
              span= `${movie.ratings}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-clock')
              span= `${movie.duration} Min`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= `${movie.releaseYear}`
            
            

          .card__footer
            p
              span.card__footer-value= `$${movie.price} `
              span.card__footer-text per person
            p.card__ratings
            //-   span.card__footer-value 4.9
            //-   span.card__footer-text rating (21)
            a.btn.btn--green.btn--small(href=`/movie/${movie.slug}`) Details